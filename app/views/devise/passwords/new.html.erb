<div class="card mx-auto" style="width: 25rem;">
  <div class="card-body">
    <h5 class="card-title text-center">Forgot Password</h5>
    
    <% if resource.errors.any? %>
      <div class="alert alert-danger">
        <h6><%= pluralize(resource.errors.count, "error") %> prohibited this user from being saved:</h6>
        <ul>
          <% resource.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
        </ul>
      </div>
    <% end %>

    <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
      <div class="form-group">
        <%= f.label :email, class: "form-label" %>
        <%= f.email_field :email, autofocus: true, class: "form-control" %>
      </div>

      <div class="form-group mt-3">
        <%= f.submit "Send Reset Instructions", class: "btn btn-primary w-100" %>
      </div>
    <% end %>

    <div class="text-center mt-3">
      <p class="mb-0">
        <%= link_to "Remembered your password?", new_session_path(resource_name), class: "link-secondary" %>
      </p>
    </div>
  </div>
</div>
